#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');

var debug = require('debug')('node-app:server');
var http = require('http');

var Jar = require("../models/jar.js");
var Account = require("../models/account.js");
var Project = require("../models/project.js");

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3500');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = app.listen(port);
var io      = require('socket.io').listen(server);

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}

// socket server
clientSockets = {}
io.sockets.on('connection', 
  // We are given a websocket object in our function
  function (socket) {
  
    // clientSockets[socket.id]=[];
    var socky = socket.id
    console.log("We have a NEW client: " + socket.id);
    


    // socket.on('mapmarker', function(data) {
    //  socket.broadcast.emit("mapmarker", data);
    // });
//
    socket.on('mapmarker', function(data) {
      console.log("got marker");
      console.log(data);
      clientSockets[socket.id]="received";
      console.log(clientSockets);

      io.sockets.connected[socky].emit('you',"you are"+socky);
      
    });
    
    socket.on('fetch', function(data) {

      //get location from fetch req 
      console.log("fetch for: " +data);
      coords = data;
      fetch_lat = coords[0];
      fetch_long = coords[1];

      var jarz="";

      Jar.find(function(err, data){
      // if err or no jars found, respond with error 
        if(err || data == null){
          console.log('error'); 
        }
        // console.log(data);
        jarz = data;
        // console.log('sending fetch');
        // sendJars(jarz);
        console.log('sending fetchNEAR');
        sendNearJars(jarz,fetch_lat,fetch_long,20);
        console.log('sending fetchMap');
        sendMapJars(jarz,fetch_lat,fetch_long,25);

      });
      
      function distance(lat1, lon1, lat2, lon2) {
        var p = 0.017453292519943295;    // Math.PI / 180
        var c = Math.cos;
        var a = 0.5 - c((lat2 - lat1) * p)/2 + 
                c(lat1 * p) * c(lat2 * p) * 
                (1 - c((lon2 - lon1) * p))/2;
        return 12742 * Math.asin(Math.sqrt(a)); // 2 * R; R = 6371 km
      }

      function sendJars(jars){
        io.sockets.connected[socky].emit('Jars',jars);

        console.log('sent?');
        console.log(jars.length);
      }

      function sendMap(jars){
        io.sockets.connected[socky].emit('nearJars',jars);

        console.log('sent map?');
        console.log(jars.length);
      }

      function sendNearJars(arr,lat,lon,dist){
        jars = []
        for (var i = 0; i < arr.length; i++) {
          var dbJar = arr[i];
          
          var jlat = dbJar.GPS.lat;
          var jlon = dbJar.GPS.lon;

         if(distance(jlat,jlon,lat,lon) < dist){
          jars.push(dbJar);
          console.log(dbJar);
         }
        }

        

        console.log('sent near?');
        console.log(jars);
        sendJars(jars);
      }

    
      function sendMapJars(arr,lat,lon,dist){
        jars = []
        for (var i = 0; i < arr.length; i++) {
          var dbJar = arr[i];
          
          var jlat = dbJar.GPS.lat;
          var jlon = dbJar.GPS.lon;

         if(distance(jlat,jlon,lat,lon) < dist){
          jars.push(dbJar);
          console.log(dbJar);
         }
        }

        

        console.log('sent near?');
        console.log(jars);
        sendMap(jars);
      }

    });

    
    socket.on('fetchBridge', function(data) {

      //get location from fetch req 
      console.log("fetch bridge for: " +data);
      coords = data;
      fetch_lat = coords[0];
      fetch_long = coords[1];

      var jarz="";
// Model.find({ 'some.value': 5 }, function (err, docs) {
//   // docs is an array
// });
      Jar.find({"project": "bridge"},function(err, data){
      // if err or no jars found, respond with error 
        if(err || data == null){
          console.log('error'); 
        }
        // console.log(data);
        jarz = data;
        // console.log('sending fetch');
        // sendJars(jarz);
        console.log('sending fetchNEAR');
        sendNearJars(jarz,fetch_lat,fetch_long,0.2);

      });
      
      function distance(lat1, lon1, lat2, lon2) {
        var p = 0.017453292519943295;    // Math.PI / 180
        var c = Math.cos;
        var a = 0.5 - c((lat2 - lat1) * p)/2 + 
                c(lat1 * p) * c(lat2 * p) * 
                (1 - c((lon2 - lon1) * p))/2;
        return 12742 * Math.asin(Math.sqrt(a)); // 2 * R; R = 6371 km
      }

      function sendJars(jars){
        io.sockets.connected[socky].emit('Jars',jars);

        console.log('sent?');
        console.log(jars);
      }

      function sendNearJars(arr,lat,lon,dist){
        jars = []
        for (var i = 0; i < arr.length; i++) {
          var dbJar = arr[i];
          
          var jlat = dbJar.GPS.lat;
          var jlon = dbJar.GPS.lon;

         if(distance(jlat,jlon,lat,lon) < dist){
          jars.push(dbJar);
          console.log(dbJar);
         }
        }

        

        console.log('sent near?');
        console.log(jars);
        sendJars(jars);
      }

    });
  
  }

);


